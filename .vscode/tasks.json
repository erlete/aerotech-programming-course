{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run linters",
            "detail": "Execute flake8 and pydocstyle on all exercise files",
            "dependsOn": [
                "Run flake8",
                "Run Pydocstyle"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Run Pydocstyle",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "pydocstyle",
                "lessons",
                "--match=\"exercise_.*\\.py\"",
                "--convention=google",
                "--ignore-self-only-init",
                "--verbose"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            },
            "hide": true,
            "problemMatcher": []
        },
        {
            "label": "Run flake8",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "flake8",
                "src/lessons",
                "--filename",
                "[exercise_*.py]",
                "--exclude",
                "test_exercise_*.py",
                "--disable-noqa",
                "--no-show-source",
                "--statistics"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            },
            "hide": true,
            "problemMatcher": []
        },
        {
            "label": "Install libraries",
            "detail": "Install libraries from requirements file",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "pip",
                "install",
                "--upgrade",
                "--force-reinstall",
                "--no-cache-dir",
                "--no-warn-script-location",
                "--disable-pip-version-check",
                "--requirement",
                "requirements/requirements-${input:requirementsFile}.txt"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "hide": false,
            "problemMatcher": []
        },
        {
            "label": "Test exercise",
            "detail": "Run pytest on current exercise file",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "pytest",
                "${relativeFileDirname}/tests/test_${fileBasename}",
                "--capture=no",
                "--no-header",
                "--verbosity=0",
                "-r=fEX",
                "--disable-warnings",
                "--tb=line",
                "--show-capture=all",
                "--assert=plain",
                "--maxfail=1"
            ],
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "requirementsFile",
            "description": "Select requirement file to use as source",
            "options": [
                "basic",
                "scientific",
                "testing"
            ],
            "default": "basic"
        }
    ]
}
