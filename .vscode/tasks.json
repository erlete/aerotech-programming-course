{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run linters",
            "dependsOn": [
                "Run flake8",
                "Run Pydocstyle"
            ],
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Run Pydocstyle",
            "type": "shell",
            "windows": {
                "command": "python",
                "args": [
                    "-m",
                    "pydocstyle",
                    "lessons",
                    "--match=\"exercise_.*\\.py\"",
                    "--convention=google"
                ]
            },
            "linux": {
                "command": "python3",
                "args": [
                    "-m",
                    "pydocstyle",
                    "lessons",
                    "--match=\"exercise_.*\\.py\"",
                    "--ignore=D100"
                ]
            },
            "osx": {
                "command": "python3",
                "args": [
                    "-m",
                    "pydocstyle",
                    "lessons",
                    "--match=\"exercise_.*\\.py\"",
                    "--ignore=D100"
                ]
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "hide": true,
            "problemMatcher": []
        },
        {
            "label": "Run flake8",
            "type": "shell",
            "windows": {
                "command": "python",
                "args": [
                    "-m",
                    "flake8",
                    "lessons",
                    "--exclude",
                    "tests",
                    "--disable-noqa",
                    "--no-show-source"
                ]
            },
            "linux": {
                "command": "python3",
                "args": [
                    "-m",
                    "flake8",
                    "lessons",
                    "--exclude",
                    "tests",
                    "--disable-noqa",
                    "--no-show-source"
