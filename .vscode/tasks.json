        {
            "label": "Test exercise",
            "type": "shell",
            "dependsOn": [
                "Set up basic testing requirements"
            ],
            "windows": {
                "command": "python",
                "args": [
                    "-m",
                    "pytest",
                    "${relativeFileDirname}\\tests\\test_${fileBasename}",
                    "--capture=no",
                    "--no-header",
                    "--verbosity=0",
                    "-r=fEX",
                    "--disable-warnings",
                    "--tb=line",
                    "--show-capture=all",
                    "--assert=plain",
                    "--maxfail=1"
                ]
            },
            "linux": {
                "command": "python3",
                "args": [
                    "-m",
