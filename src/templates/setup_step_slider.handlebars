<div class="w-full flex items-center justify-center">
  <div x-data="{ openTab: 1 }" class="w-full">
    <div class="w-full">
      <div class="mb-4 flex space-x-4 p-2 bg-secondary-50 rounded-lg shadow-md">
        <button x-on:click="openTab = 1" :class="{ 'bg-primary-500 text-title hover:text-[#4338ca]': openTab === 1 }"
          class="flex-1 py-2 px-4 rounded-md font-semibold transition-all duration-300"><p class="transition-all duration-300 hover:text-[#4338ca]">1. Download</p></button>
        <button x-on:click="openTab = 2" :class="{ 'bg-primary-500 text-title hover:text-[#4338ca]': openTab === 2 }"
          class="flex-1 py-2 px-4 rounded-md font-semibold transition-all duration-300"><p class="transition-all duration-300 hover:text-[#4338ca]">2. Installation</p></button>
        <button x-on:click="openTab = 3" :class="{ 'bg-primary-500 text-title hover:text-[#4338ca]': openTab === 3 }"
          class="flex-1 py-2 px-4 rounded-md font-semibold transition-all duration-300"><p class="transition-all duration-300 hover:text-[#4338ca]">3. Validation</p></button>
      </div>

      <div x-show="openTab === 1"
        class="transition-all duration-300 bg-secondary-50 p-4 rounded-lg shadow-md border-l-4 border-secondary-800">
        <h5 class="mt-0 font-semibold text-secondary-800">How to download {{{name}}}?</h5>
        <p class="text-text">
          {{{download_description}}}
        </p>
      </div>

      <div x-show="openTab === 2"
        class="transition-all duration-300 bg-secondary-50 p-4 rounded-lg shadow-md border-l-4 border-secondary-800">
        <h5 class="mt-0 font-semibold text-secondary-800">How to install {{{name}}}</h5>
        <p class="text-text">
          {{{installation_description}}}
        </p>
      </div>

      <div x-show="openTab === 3"
        class="transition-all duration-300 bg-secondary-50 p-4 rounded-lg shadow-md border-l-4 border-secondary-800">
        <h5 class="mt-0 font-semibold text-secondary-800">How to validate installation?</h5>
        <p class="text-text">
          {{{validation_description}}}
        </p>
      </div>

    </div>
  </div>
</div>
