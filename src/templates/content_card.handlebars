<div class="mt-3 mb-1 flex w-full items-center justify-between rounded-xl bg-secondary-50 p-3 shadow-xl">
    <div class="flex items-center">
        <a href="{{link}}">
            <div>
                <img class="h-[83px] w-[83px] rounded-lg" src="{{img_source}}" alt="Section image">
            </div>
            <div class="ml-4">
                <p class="text-base font-bold text-title">
                    {{title}}
                </p>
                <p class="mt-2 mb-2 text-sm text-text">
                    {{description}}
                </p>
                <a class="text-sm"
                    href="{{issue_link}}" target="_blank">
                    Report an issue
                </a>
            </div>
        </a>
    </div>
</div>
