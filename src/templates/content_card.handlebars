<div class="mt-3 mb-1 flex w-full items-center justify-between rounded-2xl bg-white p-3 shadow-3xl shadow-lg hover:shadow-lg hover:border-solid border-2 border-white hover:border-indigo-100">
    <div class="flex items-center">
        <a href="{{link}}">
            <div>
                <img class="h-[83px] w-[83px] rounded-lg" src="{{img_source}}" alt="Section image">
            </div>
            <div class="ml-4">
                <p class="text-base font-bold text-[#eeb027]">
                    {{title}}
                </p>
                <p class="mt-2 mb-2 text-sm text-gray-600">
                    {{description}}
                </p>
                <a class="text-sm text-zinc-500 hover:text-red-700"
                    href="{{issue_link}}" target="_blank">
                    Report an issue
                </a>
            </div>
        </a>
    </div>
</div>
